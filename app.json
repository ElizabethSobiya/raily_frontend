{
  "expo": {
    "name": "RailTrack India",
    "slug": "railtrack-india",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "scheme": "railtrack",
    "newArchEnabled": true,
    "splash": {
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "com.railtrack.india",
      "buildNumber": "1.0.0",
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show nearby stations and track your journey.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses your location to track your journey even when the app is in the background."
      }
    },
    "android": {
      "package": "com.railtrack.india",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#000000"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
